{
  "compilerOptions": {
    "target": "ES2020",                     // JS gerado compatível com a maioria dos navegadores modernos
    "lib": ["DOM", "DOM.Iterable", "ES2020"], // APIs do navegador + ES2020
    "allowJs": true,                        // Permite arquivos JS junto com TS
    "skipLibCheck": true,                   // Ignora checagem de tipos de dependências
    "esModuleInterop": true,                // Compatibilidade com import/export de módulos
    "allowSyntheticDefaultImports": true,   // Importações padrão sem precisar do ".default"
    "strict": true,                         // Habilita verificações rigorosas de tipo
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",                     // Usado pelo Vite
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,                // Necessário para Vite/React
    "noEmit": true,                          // Não gera arquivos JS, Vite faz isso
    "jsx": "react-jsx"                       // JSX moderno para React 17+
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
